<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_home"
    app:startDestination="@id/communityFragment">

    <fragment
        android:id="@+id/chatsFragment"
        android:name="com.example.afinal.fragments.homefragments.ChatsFragment"
        android:label="ChatsFragment"
        tools:layout="@layout/fragment_chats"/>

    <fragment
        android:id="@+id/memesFragment"
        android:name="com.example.afinal.fragments.homefragments.MemesFragment"
        android:label="MemesFragment"
        tools:layout="@layout/fragment_memes"/>

    <fragment
        android:id="@+id/communityFragment"
        android:name="com.example.afinal.fragments.homefragments.CommunityFragment"
        android:label="CommunityFragment"
        tools:layout="@layout/fragment_community" >
        <action
            android:id="@+id/action_communityFragment_to_chatsFragment"
            app:destination="@id/chatsFragment" />
    </fragment>

    <fragment
        android:id="@+id/rateFragment"
        android:name="com.example.afinal.fragments.homefragments.RateFragment"
        android:label="RateFragment"
        tools:layout="@layout/fragment_rate">
    </fragment>

</navigation>