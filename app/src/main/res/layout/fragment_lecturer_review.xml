<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/topLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/lecturerAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_user_default"
            app:civ_border_color="#C6000000" />

        <TextView
            android:id="@+id/lecturerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/lecturerAvatar"
            android:paddingHorizontal="10dp"
            android:text="ნიკოლოზ კაციტაძე"
            android:textColor="@color/text_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lecturerReviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rating"
            android:paddingVertical="5dp"
            android:paddingStart="10dp"
            android:text="0 Reviews" />

        <TextView
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/rating"
            android:layout_alignParentEnd="true"
            android:paddingHorizontal="30dp"
            android:text="0"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <RatingBar
            android:id="@+id/rating"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lecturerAvatar"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:numStars="5"
            android:rating="0"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:stepSize="0.5" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewReviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topLine"
        android:layout_above="@id/reviewLine"
        android:paddingHorizontal="15dp"
        tools:listitem="@layout/item_review" />

    <View
        android:id="@+id/reviewLine"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#C6928B8B"
        android:layout_above="@+id/addReview" />

    <RelativeLayout
        android:id="@+id/addReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:background="@color/item_color"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/editTextReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Add Review"
            android:background="@drawable/bg_edittext"
            android:paddingVertical="7dp"
            android:textSize="16sp"
            android:paddingHorizontal="15dp"
            android:maxLines="5"
            android:inputType="text|textMultiLine"
            android:layout_margin="5dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/buttonAddReview"/>

        <ImageView
            android:id="@+id/buttonAddReview"
            android:layout_width="40dp"
            android:layout_centerInParent="true"
            android:layout_height="40dp"
            android:padding="5dp"
            app:tint="@color/btu_color"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_send" />

    </RelativeLayout>

</RelativeLayout>